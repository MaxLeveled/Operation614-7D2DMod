		<property name="EconomicValue" value="85000"/>
		<property name="TraderStageTemplate" value="modsTier3"/>
		<!-- Increases damage against Elite enemies -->
		<effect_group tiered="false">
			<passive_effect name="DamageModifier" operation="perc_add" value=".5"/>
		</effect_group>
	</item_modifier>
	<item_modifier name="mod614GunBufferT3" installable_tags="gun" modifier_tags="specialDamage" blocked_tags="noMods" type="attachment">
		<property name="Extends" value="614modtemplate" param1="CustomIcon"/>
		<property name="CustomIcon" value="gunMGT1AK47Parts"/>
