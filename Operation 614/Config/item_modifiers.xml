<configs>
	<append xpath="/item_modifiers">
	
	<item_modifiers>
	<item_modifier name="614modtemplate" type="attachment">
		<property name="CreativeMode" value="None"/>
		<property name="CustomIcon" value="missingIcon"/>
		<property name="Stacknumber" value="1"/>
		<property name="HoldType" value="45"/>
		<property name="Meshfile" value="@:Other/Items/Misc/sackPrefab.prefab"/>
		<property name="DropMeshfile" value="@:Other/Items/Misc/sack_droppedPrefab.prefab"/>
		<property name="Group" value="Mods,Tool/Weapon Mods"/>
		<property name="PickupJournalEntry" value="augmentGunsTip"/>
	</item_modifier>
	<!-- The 614modtemplate is what we base all mods off of to combat compatibility  issues. -->
	
	<item_modifier name="mod614EliteKiller" installable_tags="weapon" modifier_tags="specialDamage" blocked_tags="noMods" type="attachment">
		<property name="Extends" value="614modtemplate" param1="CustomIcon"/>
		<property name="CustomIcon" value="pipeSmallWallValve02"/>
		<property name="EconomicValue" value="85000"/>
		<property name="TraderStageTemplate" value="modsTier3"/>
		<!-- Increases damage against Elite enemies -->
		<effect_group tiered="false">
			<passive_effect name="DamageModifier" operation="perc_add" value="2.5" tags="elite"/>
		</effect_group>
	</item_modifier>
	<item_modifier name="mod614GunBufferT1" installable_tags="gun" modifier_tags="specialDamage" blocked_tags="noMods" type="attachment">
		<property name="Extends" value="614modtemplate" param1="CustomIcon"/>
		<property name="CustomIcon" value="gunHandgunT1PistolParts"/>
		<property name="EconomicValue" value="85000"/>
		<property name="TraderStageTemplate" value="modsTier3"/>
		<!-- Increases damage against Elite enemies -->
		<effect_group tiered="false">
			<passive_effect name="DamageModifier" operation="perc_add" value=".25"/>
		</effect_group>
	</item_modifier>
	<item_modifier name="mod614GunBufferT2" installable_tags="gun" modifier_tags="specialDamage" blocked_tags="noMods" type="attachment">
