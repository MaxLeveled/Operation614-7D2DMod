		<effect_group tiered="false">
			<passive_effect name="DamageModifier" operation="perc_add" value=".75"/>
		</effect_group>
	</item_modifier>
	<item_modifier name="mod614GunBufferT4" installable_tags="gun" modifier_tags="specialDamage" blocked_tags="noMods" type="attachment">
